dimension 2
boundary p p p

atom_style ellipsoid
variable L equal 20
region total block -$L $L -$L $L -0.5 0.5
lattice hex 0.1
create_box 2 total
create_atoms 1 box
#create_atoms 1 single 1 1 0

#ghost particles
pair_style none

# Purely repulsive particles:
#variable rc equal "2^(1.0/6.0)"
#pair_style lj/cut ${rc}
#pair_coeff * * 1.0 1.0
#pair_modify shift yes

# mass * 1.0
set type * shape 1.0 1.0 1.0
set type * density 1.9098593171027443
set type * quat 0 0 1 0

#fix step all nve/asphere
#fix temp all langevin 1.0 1.0 1.0 13 angmom 3.333333333
fix step all brownian 1.0 10 13 angmom 0.1

neighbor 0.6 bin

#dump traj all custom 100 3d_active.dump.bin id type x y z fx fy fz
#dump myDump all atom 1 dump.atom
dump traj all custom 1 traj_dump.atom id type x y z fx fy fz tqx tqy tqz

thermo_style custom step pe etotal dt fmax
thermo 100

fix active all propel/self quat 10.0

# With active force there is more motion so increase bin size:
neighbor 1.0 bin
run 2000
